@model ShopAsp.NetCore.Models.UpdatePassword

    <div class="container-fluid mb-5 mt-5">
        <h1 class="h3 mb-2 text-gray-800 text-center">Đổi mật khẩu</h1>
        <form id="userInfo" role="form" accept-charset="utf-8" method="post" class="container">
            <div class="col-8 container">
                <div class="form-group">
                    <label asp-for="OldPassword"></label>
                    <input asp-for="OldPassword" type="password" class="form-control" id="email">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>

                </div>
                <div class=" form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" type="password" class="form-control" id="last_name">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                </div>
                <div class=" form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="first_name">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
                <div class="col-5 container-fluid ">
                    <button asp-action="UpdatePassword" type="submit" id="submit" class="btn btn-primary mt-2">Đổi mật khẩu</button>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-success mt-2">Về trang chủ</a>
                </div>
            </div>
        </form>
    </div>
    @if (ViewBag.Success == true)
    {
        <script type="text/javascript">

            window.onload = async function () {
                Swal.fire({
                    title: "đổi mật khẩu thành công",
                    icon: "success",
                    showCloseButton: true,
                })

            };
        </script>

    }
