@model ShopAsp.NetCore.Models.Bill;

@{
    Layout = "_Layout";
}


<h2 class="text-info container">Chỉnh sửa hóa đơn</h2>
<div class="border container" style="padding:30px;">
    <form method="post" enctype="multipart/form-data" asp-controller="Admin">
        <div class="table-responsive">
            <table id="dataTable1" class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>Tên sản phẩm</td>
                        <td>Đơn giá</td>
                        <td>Số lượng</td>
                        <td>Thành tiền</td>
                    </tr>
                </thead>
                <tbody id="detail_modal">
                    @foreach (var item in Model.BillDetails as IEnumerable<BillDetail>)
                    {
                        <tr id="11">
                            <td>@item.Product.Name</td>
                            <td class="price">@item.Product.Price</td>
                            <td>@item.quantity</td>
                            <td class="price">@item.TotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="BillId" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Date" />
        <input type="hidden" asp-for="District" />
        <input type="hidden" asp-for="Province" />
        <div class="form-group row">
            <div class="col-3">
                <label>Mã hóa đơn</label>
            </div>
            <div class="col-6">
                <input asp-for="BillId" readonly class="form-control" />
                <span asp-validation-for="BillId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Khách hàng</label>
            </div>
            <div class="col-6">
                <input asp-for="Receiver" class="form-control" />
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Số điện thoại</label>
            </div>
            <div class="col-6">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Địa chỉ</label>
            </div>
            <div class="col-6">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label>Vận chuyển</label>
            </div>
            <div class="col-6">
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Tình trạng thanh toán</label>
            </div>
            <div class="col-6">
                <input asp-for="Pay" class="form-control" />
                <span asp-validation-for="Pay" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Tổng tiền</label>
            </div>
            <div class="col-6">
                <input class="price" asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    Cập nhật hóa đơn
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Invoices" class="btn btn-success form-control">Trở lại quản lý</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

</div>